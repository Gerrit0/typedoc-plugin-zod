{
    "compilerOptions": {
        "target": "es2020",
        "module": "Node16",
        "strict": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "outDir": "dist",
        "types": []
    },
    "include": ["."],
    "typedocOptions": {
        "readme": "none",
        "logLevel": "Verbose",
        "outputs": [
            { "name": "html", "path": "./docs" },
            { "name": "json", "path": "./docs/docs.json" }
        ]
    }
}
